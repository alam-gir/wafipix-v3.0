# Production Environment Variables for Wafipix
# Copy this file to .env.production and fill in your actual values

# Meta Pixel Configuration
# Get your Meta Pixel ID from Facebook Business Manager
# https://business.facebook.com/settings/pixels
NEXT_PUBLIC_META_PIXEL_ID=your_production_meta_pixel_id_here

# Email Configuration
GMAIL_USER=your_production_gmail@gmail.com
GMAIL_APP_PASSWORD=your_production_gmail_app_password
CONTACT_EMAIL=contact@wafipix.com

# Application Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NODE_ENV=production

# Security
NEXT_TELEMETRY_DISABLED=1

# Example Meta Pixel ID format: 123456789012345
# The ID should be a 15-digit number
